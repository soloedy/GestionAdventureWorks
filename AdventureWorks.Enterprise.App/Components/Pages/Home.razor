@page "/"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>AdventureWorks Enterprise - Inicio</PageTitle>

<h1>Bienvenido a AdventureWorks Enterprise</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-users fa-3x text-primary"></i>
                </div>
                <h5 class="card-title">Recursos Humanos</h5>
                <p class="card-text">Gestión de empleados y departamentos.</p>
                <button type="button" class="btn btn-primary" @onclick="NavigateToEmployees">
                    <i class="fas fa-arrow-right me-2"></i>
                    Acceder
                </button>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-industry fa-3x text-success"></i>
                </div>
                <h5 class="card-title">Producción</h5>
                <p class="card-text">Gestión de productos.</p>
                <button type="button" class="btn btn-success" @onclick="NavigateToHomeProduct">
                    <i class="fas fa-arrow-right me-2"></i>
                    Acceder
                </button>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-chart-bar fa-3x text-info"></i>
                </div>
                <h5 class="card-title">Reportes</h5>
                <p class="card-text">Visualización de reportes.</p>
                <button type="button" class="btn btn-info" @onclick="NavigateToHomeReport">
                    <i class="fas fa-arrow-right me-2"></i>
                    Acceder
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToEmployees()
    {
        Navigation.NavigateTo("/employees", forceLoad: true);
    }
    
    private void NavigateToHomeProduct()
    {
        Navigation.NavigateTo("/home-product", forceLoad: true);
    }

    private void NavigateToHomeReport()
    {
        Navigation.NavigateTo("/home-report", forceLoad: true);
    }
}
