@using AdventureWorks.Enterprise.App.Models
@using AdventureWorks.Enterprise.App.Services
@inject ApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

@page "/create-workorder"

<PageTitle>Crear Orden de Trabajo</PageTitle>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-tasks me-2"></i>Crear Nueva Orden de Trabajo
        </h5>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger">@ErrorMessage</div>
        }
        <EditForm Model="@WorkOrder" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="productId" class="form-label">ID Producto *</label>
                        <InputNumber id="productId" class="form-control" @bind-Value="WorkOrder.ProductID" />
                        <ValidationMessage For="@(() => WorkOrder.ProductID)" class="text-danger" />
                    </div>
                    <div class="mb-3">
                        <label for="orderQty" class="form-label">Cantidad *</label>
                        <InputNumber id="orderQty" class="form-control" @bind-Value="WorkOrder.OrderQty" />
                        <ValidationMessage For="@(() => WorkOrder.OrderQty)" class="text-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="scrappedQty" class="form-label">Cantidad Descartada</label>
                        <InputNumber id="scrappedQty" class="form-control" @bind-Value="WorkOrder.ScrappedQty" />
                    </div>
                    <div class="mb-3">
                        <label for="startDate" class="form-label">Fecha Inicio *</label>
                        <InputDate id="startDate" class="form-control" @bind-Value="WorkOrder.StartDate" />
                        <ValidationMessage For="@(() => WorkOrder.StartDate)" class="text-danger" />
                    </div>
                    <div class="mb-3">
                        <label for="dueDate" class="form-label">Fecha Vencimiento *</label>
                        <InputDate id="dueDate" class="form-control" @bind-Value="WorkOrder.DueDate" />
                        <ValidationMessage For="@(() => WorkOrder.DueDate)" class="text-danger" />
                    </div>
                </div>
            </div>
            <ValidationSummary class="text-danger" />
            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="button" class="btn btn-secondary" @onclick="NavigateToList" disabled="@IsLoading">
                    <i class="fas fa-arrow-left me-2"></i>Cancelar
                </button>
                <button type="submit" class="btn btn-primary" disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <div class="spinner-border spinner-border-sm me-2" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    }
                    else
                    {
                        <i class="fas fa-save me-2"></i>
                    }
                    Crear Orden
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private WorkOrderCreateDto WorkOrder = new()
    {
        StartDate = DateTime.Today,
        DueDate = DateTime.Today.AddDays(7)
    };
    private bool IsLoading = false;
    private string ErrorMessage = string.Empty;

    private async Task HandleValidSubmit()
    {
        IsLoading = true;
        ErrorMessage = string.Empty;
        StateHasChanged();
        var result = await ApiService.FncCreateWorkOrderAsync(WorkOrder);
        if (result.Status)
        {
            Navigation.NavigateTo("/workorders");
        }
        else
        {
            ErrorMessage = result.Message;
        }
        IsLoading = false;
        StateHasChanged();
    }

    private void NavigateToList()
    {
        Navigation.NavigateTo("/workorders");
    }
}
